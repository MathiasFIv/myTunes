<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Title -->
    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <!-- Artist -->
    <Label text="Artist:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="artistField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <!-- Category -->
    <Label text="Category:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="categoryField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <!-- Time -->
    <Label text="Time:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="timeField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnSpan="2">
        <children>
            <Button fx:id="saveBtn" text="Save" />
            <Button fx:id="cancelBtn" text="Cancel" />
        </children>
    </HBox>
</GridPane>