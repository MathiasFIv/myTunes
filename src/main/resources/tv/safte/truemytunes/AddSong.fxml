<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tv.safte.truemytunes.GUI.Controller.AddSongController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Title -->
    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <!-- Artist -->
    <Label text="Artist:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="artistField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Category -->
    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Time -->
    <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="timeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- File Path -->
    <Label text="File Path:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="filePathField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="5">
        <children>
            <Button fx:id="saveBtn" onAction="#onSave" text="Save" />
            <Button fx:id="cancelBtn" onAction="#onCancel" text="Cancel" />
        </children>
    </HBox>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>